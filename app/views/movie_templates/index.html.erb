<h1>
  List of all movies
</h1>
<form action="/movies" method="post">
    <label for="title">Title:</label><br>
    <input type="text" id="title" name="title"><br>
    
    <label for="year">Year:</label><br>
    <input type="text" id="year" name="year"><br>
    
    <label for="duration">Duration:</label><br>
    <input type="text" id="duration" name="duration"><br>
    
    <label for="description">Description:</label><br>
    <textarea id="description" name="description"></textarea><br>
    
    <label for="image">Image:</label><br>
    <input type="text" id="image" name="image"><br>
    
    <label for="director_id">Director ID:</label><br>
    <input type="text" id="director_id" name="director_id"><br>
    
    <button type="submit">Create movie</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

      <%= the_director.name %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
